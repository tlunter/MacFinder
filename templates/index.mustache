{{> header }}
  <div class="pure-g">
    <div class="pure-u-2-3">
      <form action="/delete" method="post">
        <table class="pure-table">
          <thead>
            <tr>
              <th>MAC Address</th>
              <th>Owner Name</th>
              <th>Controls</th>
            </tr>
          </thead>
          <tbody>
            {{#keys}}
            <tr>
              <td>{{mac}}</td>
              <td>{{name}}</td>
              <td><button type="submit" class="pure-button" name="mac" value="{{mac}}">Delete</button></td>
            </tr>
            {{/keys}}
          </tbody>
        </table>
      </form>
    </div>
    <div class="pure-u-1-3">
      <div class="add-mac-form">
        <form method="post" action="/add" class="pure-form pure-form-stacked">
          <fieldset>
            <legend>Add a new MAC address</legend>
            <div class="pure-control-group">
              <label for="mac">MAC</label>
              <input id="mac" type="text" name="mac" placeholder="MAC">
            </div>
            <div class="pure-control-group">
              <label for="name">Name</label>
              <input id="name" type="text" name="name" placeholder="Name">
            </div>
            <div class="pure-controls">
              <button type="submit" class="pure-button pure-button-primary">Add</button>
            </div>
          </fieldset>
        </form>
      </div>
  </div>
{{> footer }}
